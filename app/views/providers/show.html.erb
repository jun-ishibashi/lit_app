<%= render "shared/header" %>

<section class="features-icons bg-light text-center shadow">
  <h3>My Page for Provioder</h3>
  <p class="lead mb-0"></p>
</section>

<section class="showcase">
  <div class="container p-5">
    <div class="text-center">
      <div class="col-lg-6 my-5 mx-auto">
        <h5>会社名</h5>
        <p class="font-weight-light mb-0"><%= @provider.name %></p>
      </div>

      <div class="col-lg-6  my-5 mx-auto my-0">
        <h5>登録メールアドレス</h5>
        <p class="font-weight-light mb-0"><%= @provider.email %></p>
      </div>

      <div class="col-lg-6  my-5 mx-auto">
        <h5>メインサービスタイプ</h5>
        <p class="font-weight-light mb-0"><%= @provider.service_type.name %></p>
      </div>

      <div class="col-lg-6  my-5 mx-auto">
        <h5>紹介</h5>
        <p class="font-weight-light mb-0"><%= @provider.introduction %></p>
      </div>

      <section class="testimonials text-center bg-light d-flex">
        <div class="container">
          <h2 class="mb-5">提供サービス一覧</h2>
          <div class="row">
            <div class= 'd-flex border-bottom'>
              <div class="col-lg-4" >
                <div class="testimonial-item mx-auto mb-0 mb-lg-0">
                  <h5>出発地</h5>
                </div>
              </div>
              <div class="col-lg-4">
                <div class="testimonial-item mx-auto mb-0 mb-lg-0">
                  <h5>到着地</h5>
                </div>
              </div>
              <div class="col-lg-4">
                <div class="testimonial-item mx-auto mb-0 mb-lg-0">
                  <h5>料金</h5>                  
                </div>
              </div>
              <div class="col-lg-4">
                <div class="testimonial-item mx-auto mb-0 mb-lg-0">
                  <h5>リードタイム</h5>                  
                </div>
              </div>
              <div class="col-lg-4">
                <div class="testimonial-item mx-auto mb-0 mb-lg-0">
                  <h5>サービスタイプ</h5>                  
                </div>
              </div>
            </div>
            <% @services.each do |service| %>
              <%=link_to service_path(service.id), class: 'd-flex border-bottom p-4 bg-light text-dark text-decoration-none' do %>
                <div class="col-lg-4" >
                  <p class="font-weight-light mb-0"><%= service.departure.name %></p>
                </div>
                <div class="col-lg-4">
                  <p class="font-weight-light mb-0"><%= service.destination.name %></p>
                </div>
                <div class="col-lg-4">
                  <p class="font-weight-light mb-0"><%= service.price %>円</p>
                </div>
                <div class="col-lg-4">
                  <p class="font-weight-light mb-0"><%= service.lead_time %>日</p>
                </div>
                <div class="col-lg-4">
                  <p class="font-weight-light mb-0"><%= service.service_type.name %></p>
                </div>
              <% end %>
            <% end %>
          </div>
        </div>
      </section>


      <div class="col-lg-6  my-5 mx-auto">
        <%= link_to 'もどる', :back, class:"btn btn-primary mt-5 px-5" %>
      </div>
    </div>
  </div>
</section>

<%= render "shared/footer" %>

