<%= render "shared/header" %>

<section class="features-icons bg-light text-center">
  <h3>ユーザー登録</h3>
  <p class="lead mb-0">ユーザー情報を入力して下さい</p>
</section>


<%= form_with model: @user, url: user_registration_path, class: 'registration-main', local: true do |f| %>

<%# <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "users/shared/error_messages", resource: resource %>
  
  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_area :name, class:"hoge", id:"name", placeholder:"名前を入力", maxlength:"40" %>
  </div>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="field">
      <%= f.label :user_type %><br />
      <%= f.collection_select(:user_type_id, UserType.all, :id, :name, {}, {class:"user-type-select"}) %>
  </div>

  <div class="field">
      <%= f.label :product %><br />
      <%= f.collection_select(:product_id, Product.all, :id, :name, {}, {class:"product-select"}) %>
  </div>

  <div class="field">
    <%= f.label :introduction %><br />
    <%= f.text_area :introduction, class:"hoge", id:"introduction", placeholder:"輸送上重視される点等" %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up" %>
  </div>
<% end %>

<%= render "users/shared/links" %>

<%= render "shared/footer" %>


