<!-- Icons Grid-->
<section class="features-icons bg-light text-center">
    <%# <div class="container"> %>
      <h3>輸送サービスを登録</h3>
      <p class="lead mb-0">ルートと運賃で簡単に登録ができます</p>
</section>
<!-- Image Showcases-->
<section class="showcase">
    <div class="container-fluid p-0">
        <%= form_with model: @service, local: true do |f| %>
            
            <div class="col-lg-6 order-lg-1 my-auto showcase-text">
              <h2>出発地</h2>
              <p class="lead mb-0">貨物を出荷する都市を選択して下さい</p>
              <%= f.collection_select(:departure_id, Departure.all, :id, :name, {}, {class:"departure-select"}) %><br>
            </div>

            <div class="col-lg-6 order-lg-1 my-auto showcase-text">
              <h2>仕向地</h2>
              <p class="lead mb-0">貨物を輸送する都市を選択して下さい</p>
              <%= f.collection_select(:destination_id, Destination.all, :id, :name, {}, {class:"destination-select"}) %><br>
            </div>

            <div class="col-lg-6 order-lg-1 my-auto showcase-text">
              <h2>サービスタイプ</h2>
              <p class="lead mb-0">輸送手段を選択して下さい</p>
               <%= f.collection_select(:service_type_id, ServiceType.all, :id, :name, {}, {class:"service-type-select"}) %><br>
            </div>

            <div class="col-lg-6 order-lg-1 my-auto showcase-text">
              <h2>料金</h2>
              <p class="lead mb-0">料金を入力して下さい</p>
              <%= f.text_field :price, class:"price-input", id:"service-price", placeholder:"例）30,000" %>円<br>
            </div>

            <div class="col-lg-6 order-lg-1 my-auto showcase-text">
              <h2>リードタイム</h2>
              <p class="lead mb-0">リードタイムを入力して下さい</p>
              <%= f.text_field :lead_time, class:"leadtime-input", id:"service-leadtime", placeholder:"例）3" %>日<br>
            </div>

            <div class="col-lg-6 order-lg-1 my-auto showcase-text">
              <h2>オプション</h2>
              <p class="lead mb-0">対応可能なオプションがあれば選択して下さい</p>
              <%= f.collection_select(:option_id, Option.all, :id, :name, {}, {class:"option-select"}) %><br>
            </div>

            <div class="col-lg-6 order-lg-1 my-auto showcase-text">
              <h2>説明</h2>
              <p class="lead mb-0">サービスの説明や概要を入力して下さい</p>
              <%= f.text_field :description, class:"description-input", id:"service-description" %><br>
            </div>

             <div class="col-lg-6 order-lg-1 my-auto showcase-text">
                <%= f.submit "登録する" ,class:"btn" %>
            </div>
           
        <% end %>
    </div>

</section>
